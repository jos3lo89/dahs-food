---
import { breakfasts } from "../data/products";
import BreakfastCard from "./BreakfastCard.astro";
---

<section id="desayunos" class="py-20 bg-pink-50">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16 animate-fade-in">
      <h2 class="text-5xl font-bold text-pink-900 mb-4">Nuestros Desayunos</h2>
      <p class="text-xl text-pink-600">
        Elige tu favorito y comienza el día con energía
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {breakfasts.map((breakfast) => <BreakfastCard product={breakfast} />)}
    </div>
  </div>
</section>
